<% layout("/layouts/boilerplate") %>
<div class="row" style="height: calc(100vh - 150px); overflow: hidden;">
    <div class="col-10 col-md-8 offset-1 offset-md-2" style="padding-top: 20px; height: 100%; overflow-y: auto; scrollbar-width: none; -ms-overflow-style: none;">
        <h3 style="
            font-family: sans-serif;
            font-size: 2rem;
            font-weight: 500;
            background: linear-gradient(90deg, #454545, #1a202c);
            -webkit-background-clip: text;
            background-clip: text;
            color: transparent;
            margin: 0 0 1rem;
            letter-spacing: -0.5px;
        ">Create a new listing</h3>
        
        <form method="POST" action="/listings" style="height: calc(100% - 50px);" class="needs-validation" novalidate>
            <div style="height: 100%; display: flex; flex-direction: column;">
                <div>
                    <div class="mb-2">
                        <label for="title" class="form-label fw-semibold">Title</label>
                        <input name="listing[title]" placeholder="Your Spotlight Awaits" type="text" class="form-control form-control-sm" required>
                    </div>

                    <div class="mb-2">
                        <label for="description" class="form-label fw-semibold">Description</label>
                        <textarea name="listing[description]" class="form-control form-control-sm" rows="2" required></textarea>
                    </div>

                    <div class="mb-2">
                        <label for="image" class="form-label fw-semibold">Image Link</label>
                        <input name="listing[image]" placeholder="Enter Image URL" type="text" class="form-control form-control-sm">
                    </div>

                    <div class="row g-2">
                        <div class="mb-2 col-md-4">
                            <label for="price" class="form-label fw-semibold">Price</label>
                            <input name="listing[price]" placeholder="Enter Price" type="number" class="form-control form-control-sm" required>
                        </div>
                
                        <div class="mb-2 col-md-8">
                            <label for="country" class="form-label fw-semibold">Country</label>
                            <input name="listing[country]" placeholder="Enter Country" type="text" class="form-control form-control-sm" required>
                        </div>
                    </div>

                    <div class="mb-3">
                        <label for="location" class="form-label fw-semibold">Location</label>
                        <input name="listing[location]" placeholder="Enter Location" type="text" class="form-control form-control-sm" required>
                    </div>
                </div>

                <div class="text-center mt-3">
                    <button class="btn-cool">
                        <span class="btn-cool-text">Add</span>
                        <span class="btn-cool-icon"><svg xmlns="http://www.w3.org/2000/svg" height="20px" viewBox="0 -960 960 960" width="24px" fill="#e3e3e3"><path d="M440-440H200v-80h240v-240h80v240h240v80H520v240h-80v-240Z"/></svg></span>
                    </button>
                </div>
            </div>
        </form>
    </div>
</div>

<style>
    .btn-cool {
        position: relative;
        padding: 10px 20px;
        border: none;
        border-radius: 50px;
        background: linear-gradient(135deg, #fb1662, #d81159);
        color: white;
        font-weight: 600;
        font-size: 14px;
        text-transform: uppercase;
        letter-spacing: 1px;
        cursor: pointer;
        overflow: hidden;
        transition: all 0.3s ease;
        box-shadow: 0 4px 12px rgba(251, 22, 98, 0.2);
        display: inline-flex;
        align-items: center;
        justify-content: center;
        gap: 6px;
    }
    .btn-cool:hover {
        transform: translateY(-2px);
        box-shadow: 0 6px 16px rgba(251, 22, 98, 0.3);
        background: linear-gradient(135deg, #d81159, #fb1662);
    }
    .btn-cool:active {
        transform: translateY(0);
        box-shadow: 0 2px 8px rgba(251, 22, 98, 0.3);
    }
    .btn-cool::before {
        content: '';
        position: absolute;
        top: 0;
        left: -100%;
        width: 100%;
        height: 100%;
        background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.2), transparent);
        transition: 0.5s;
    }
    .btn-cool:hover::before {
        left: 100%;
    }
    .btn-cool-icon {
        font-size: 0.5rem;
        transition: transform 0.3s ease;
    }
    .btn-cool:hover .btn-cool-icon {
        transform: rotate(90deg);
    }
    .form-control-sm {
        padding: 0.25rem 0.5rem;
        font-size: 0.875rem;
        border: 1px solid rgba(201, 54, 103, 0.2);
    }
    .form-control-sm:focus {
        border-color: #fb1662;
        box-shadow: 0 0 0 0.2rem rgba(251, 22, 98, 0.25);
    }
</style>